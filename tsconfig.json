{
    "compilerOptions": {
        "target": "ES2024",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "sourceMap": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "node"
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
